@model DocManagement.Models.Document

@{
    ViewBag.Title = "Details";
}



<div class="card border-primary margin-top-light mb-3 mx-auto" style="max-width: 40rem;">
    <div class="card-body">
        <h4 class="card-title">Document details</h4>

        <div>

            <hr />
            <dl class="dl-horizontal">
                <dt>
                    Uploaded by:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ApplicationUser.FirstName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.UploadDate)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.UploadDate)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.File)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.File)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Views)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Views)
                </dd>

            </dl>
            <div class="text-center">
                <p>
                    @Html.ActionLink("Download", "#", new { id = Model.Id }) |
                    @Html.ActionLink("Back to List", "Index")
                </p>

            </div>
        </div>
    </div>
</div>