@model IEnumerable<DocManagement.Models.Document>

@{
    ViewBag.Title = "Index";
}

<div style="padding: 15px">
    <div class="row">
        <div class="col">
            @*1 of 2*@

            <div class="card border-primary mb-3" style="max-width: 50rem;">
                <div class="card-header">Uploaded</div>
                <div class="card-body">


                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.ApplicationUser.FirstName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UploadDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.File)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Views)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ApplicationUser.FirstName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UploadDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.File)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Views)
                                </td>
                                <td>
                                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                                </td>
                            </tr>
                        }

                    </table>



                </div>
            </div>




        </div>

        <div class="col">
            @*2 of 2*@

            <div class="card border-info mb-3" style="max-width: 50rem;">
                <div class="card-header">Downloaded</div>
                <div class="card-body">








                </div>
            </div>


        </div>
    </div>
</div>